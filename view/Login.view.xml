<mvc:View
	controllerName="sap.ui.su01.controller.Login"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:forms="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
	xmlns="sap.m">
    <Page title="Bienvenido al ERP">
        <content>
            <l:VerticalLayout
            class="sapUiContentPadding"
            id="oVerticalContent"
            width="100%">
            </l:VerticalLayout>
            <forms:SimpleForm layout="ResponsiveGridLayout">
                <forms:title>
                    <core:Title text="Login" />
                </forms:title>
                <forms:content> 
                    <Label text="Empresa" />
                    <Input width="300px" id="txtEmpresa" required="true" />                    
                    <Label text="Usuario" />
                    <Input width="300px" id="txtUsuario" required="true" />
                    <Label text="ContraseÃ±a" />
                    <Input width="300px" type="Password" id="txtPassword" required="true" />                   
                </forms:content>
            </forms:SimpleForm>                 
        </content>        
        <footer>
            <OverflowToolbar>                
                <Button text="Acceder" icon="sap-icon://action" type="Transparent" press="onPressAcceder"/>
                <Button text="Limpiar" icon="sap-icon://delete" type="Transparent" press="onPressLimpiar"/>
            </OverflowToolbar>
		</footer>
    </Page>
</mvc:View>