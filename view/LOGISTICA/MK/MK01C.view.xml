                                <Input id="iptCtrlconfi" width="300px" value="{/bstae}" />                              
                                <Label text="Perfil de redondeo" />
                                <Input id="iptPerfilred" width="300px" value="{/rdprf}" />     
                            </f:content>
                        </f:SimpleForm>
                        
                        <f:SimpleForm
                            editable="true"
                            columnsXL="2"                                      
                            singleContainerFullSize="false"
                            layout="ResponsiveGridLayout">
                            <f:title>
                                <core:Title text="Datos de servicio" />
                            </f:title>
                            <f:content>                               
                                <Label text="Nivel serv." />
                                <Input id="iptNivelserv" width="300px" value="{/vensl}" />     
                            </f:content>
                        </f:SimpleForm>
                        
