<mvc:View
	controllerName="sap.ui.su01.controller.LOGISTICA.MK.MK02"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:u="sap.ui.unified"
	xmlns="sap.m">    
    <core:Fragment fragmentName='sap.ui.su01.view.Cabecera' type='XML' />
    <Page
		showHeader="true"
		enableScrolling="false" >
        <customHeader>            
			<Toolbar>                
				<ToolbarSpacer/>
				<Title text="Acreedor Modificar: Acceso" level="H2"/>			
                <ToolbarSpacer/>
			</Toolbar>
		</customHeader>  
        <subHeader>
			<Toolbar>
				<Button icon="sap-icon://edit" press="onEdit"/>
				<Button icon="sap-icon://delete" press="onDelete"/>
			</Toolbar>
		</subHeader>
        <content>
            <f:SimpleForm
                layout="ResponsiveGridLayout">
                <f:content>
                    <Label text="Acreedor" />
                    <Input width="300px" showValueHelp="true"/>
                    <Label text="Organización de compras" />
                    <Input width="300px" showValueHelp="true"/>                                         
                </f:content>
            </f:SimpleForm>
            <f:SimpleForm
                layout="ResponsiveGridLayout">
                <f:title>
                    <core:Title text="Datos Generales" />
                </f:title>
                <f:content>
                    <CheckBox text="Dirección" />
                    <CheckBox text="Control" />
                    <CheckBox text="Pagos" />
                    <CheckBox text="Persona de contacto" />
                </f:content>
            </f:SimpleForm>
            <f:SimpleForm
                layout="ResponsiveGridLayout">
                <f:title>
                    <core:Title text="Datos organización de compras" />
                </f:title>
                <f:content>
                    <CheckBox text="Datos de compra" />
                </f:content>
            </f:SimpleForm>
        </content>
	</Page>
</mvc:View>