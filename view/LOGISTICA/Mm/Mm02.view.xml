<mvc:View
	controllerName="sap.ui.su01.controller.LOGISTICA.Mm.Mm02"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:u="sap.ui.unified"
	xmlns="sap.m">    
    <core:Fragment fragmentName='sap.ui.su01.view.Cabecera' type='XML' />
    <Page
		showHeader="true"
		enableScrolling="false" 
        title="Modificar Material">
        <subHeader>
			<Toolbar>
				<Button icon="sap-icon://edit" press="onEdit" tooltip="Editar"/>
				<Button icon="sap-icon://delete" press="onDelete"/>
			</Toolbar>
		</subHeader>
        <content>
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="2"
                labelSpanL="2"
                labelSpanM="2"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="9"
                emptySpanL="8"
                emptySpanM="7"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false">
                <f:content>
                    <Label text="Material" id="lblMaterial"/>
                    <ComboBox id="inpMatnr" showSecondaryValues="true" items="{cbMaterial>/}" width="300px" selectedKey="{matnr}">
                        <core:ListItem key="{cbMaterial>matnr}" text="{cbMaterial>matnr}" additionalText="{cbMaterial>maktg}" />
                    </ComboBox>
                    <Label text="Centro" id="lblCentro"/>
                    <ComboBox id="inpWerks" showSecondaryValues="true" items="{cbCentro>/}" width="300px" selectedKey="{werks}">
                        <core:ListItem key="{cbCentro>werks}" text="{cbCentro>werks}" additionalText="{cbCentro>name1}" />
                    </ComboBox>
                    <Label text="AlmacÃ©n" id="lblAlmacen"/>
                    <ComboBox id="idAlmacen" showSecondaryValues="true" items="{cbAlmacen>/}" width="300px" selectedKey="{lgort}">
                        <core:ListItem key="{cbAlmacen>lgort}" text="{cbAlmacen>lgort}" additionalText="{cbAlmacen>lgobe}" />
                    </ComboBox> 
                </f:content>
            </f:SimpleForm>
        </content>
	</Page>
</mvc:View>