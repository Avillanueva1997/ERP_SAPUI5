<mvc:View
	controllerName="sap.ui.su01.controller.LOGISTICA.Mm.MmC"
    xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:forms="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
	xmlns="sap.m">
    <core:Fragment fragmentName='sap.ui.su01.view.Cabecera' type='XML' />
    <Page title="Crear material"
        id="mmc">
        <content>    
            <f:SimpleForm
                layout="ResponsiveGridLayout">
                <f:content>
                    <Label text="Material" />
                    <Input id="iptMaterial" width="300px" showValueHelp="true" editable="false" value="{/matnr}" />
                    <Label text="Descripcion" />
                    <Input id="iptDescripcion" width="300px"  value="{/maktg}" />                                                            
                </f:content>
            </f:SimpleForm>
            <IconTabBar
				expanded="{device>/isNoPhone}"
				class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter
						text="Datos basicos">
						<f:SimpleForm
							layout="ResponsiveGridLayout"
                            labelSpanXL="4"
                            labelSpanL="4"
                            labelSpanM="4"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="3"
                            emptySpanL="3"
                            emptySpanM="3"
                            emptySpanS="3"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="2"
                            singleContainerFullSize="false">
                            <core:Title text="Datos generales" />
							<Label text="Unidad medida base"/>
							<Input value="{/meins}"/>
                            <Label text="N° material antiguo"/>
							<Input value="{/bismt}"/>
                            <Label text="Status mat. Todos ce"/>
                            <Input value="{/kosch}"/>
                            <core:Title/>
                            <Label text="Grupo de articulos"/>
							<Input value="{/matkl}" />
                            <Label text="Valido de"/>
                            <Input value="{/mstde}" />
                            <core:Title text="Dimensiones/EAN" />
                            <Label text="Peso bruto"/>
							<Input value="{/brgew}" />
                            <Label text="Peso neto"/>
							<Input value="{/ntgew}"/>
                            <Label text="Volumen"/>
							<Input value="{/volum}"/>
                            <Label text="Tamaño/Dimensión"/>
							<Input value="{/groes}"/>
                            <Label text="Codigo EAN/UPC"/>
							<Input value="{/ean11}"/>
                            <core:Title/>
                            <Label text="Unidad de peso"/>
							<Input value="{/gewei}"/>
                            <Label text="Unidad de volumen"/>
							<Input value="{/voleh}"/>
                            <Label text="Tipo EAN"/>
							<Input value="{/numtp}"/>
                            <core:Title text="Datos material de embalaje" />
                            <Label text="Gr.materiales ME"/>
							<Input value="{/magrv}"/>
						</f:SimpleForm>
					</IconTabFilter>
                    <IconTabFilter
						text="Compras">
                        <f:SimpleForm
							layout="ResponsiveGridLayout"
                            labelSpanXL="2"
                            labelSpanL="2"
                            labelSpanM="2"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="9"
                            emptySpanL="8"
                            emptySpanM="7"
                            emptySpanS="0"
                            columnsXL="1"
                            columnsL="1"
                            columnsM="1"
                            singleContainerFullSize="false">
							<Label text="Centro"/>
							<Input value="{/werks}"/>
						</f:SimpleForm>
                        <f:SimpleForm
							layout="ResponsiveGridLayout"
                            labelSpanXL="4"
                            labelSpanL="4"
                            labelSpanM="4"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="3"
                            emptySpanL="3"
                            emptySpanM="3"
                            emptySpanS="3"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="2"
                            singleContainerFullSize="false">
                            <core:Title text="Datos generales" />
                            <Label text="Unidad medida base"/>
							<Input value="{/meins}"/>
                            <Label text="Grupo de compras"/>
							<Input value="{/ekgrp}"/>
                            <Label text="Stat. mat. especif. ce."/>
							<Input value="{/mmsta}"/>
                            <Label text="Ident. impuesto ma."/>
							<Input value="{/taxim}"/>
                            <Label text="Sujeto-Lote"/>
                            <CheckBox/>
                            <core:Title/>
                            <Label text="Unidad medida pedido"/>
							<CheckBox/>
                            <Label text="Grupo de articulos"/>
							<Input value="{/matkl}"/>
                            <Label text="Valido de"/>
							<Input value="{/mmstd}"/>
                            <Label text="UMP var."/>
							<Input value="{/vabme}"/>
						</f:SimpleForm>
                    </IconTabFilter>
                    <IconTabFilter
						text="Almacenamiento">
                        <f:SimpleForm
							layout="ResponsiveGridLayout"
                            labelSpanXL="2"
                            labelSpanL="2"
                            labelSpanM="2"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="9"
                            emptySpanL="8"
                            emptySpanM="7"
                            emptySpanS="0"
                            columnsXL="1"
                            columnsL="1"
                            columnsM="1"
                            singleContainerFullSize="false">
							<Label text="Centro"/>
							<Input value="{/werks}"/>
                            <Label text="Almacen"/>
							<Input value="{}"/>
						</f:SimpleForm>
                        <f:SimpleForm
							layout="ResponsiveGridLayout"
                            labelSpanXL="4"
                            labelSpanL="4"
                            labelSpanM="4"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="3"
                            emptySpanL="3"
                            emptySpanM="3"
                            emptySpanS="3"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="2"
                            singleContainerFullSize="false">
                            <core:Title text="Datos generales" />
                            <Label text="Unidad medida base"/>
							<Input value="{/meins}"/>
                            <Label text="Condic. temperatura"/>
							<Input value="{/tempb}"/>
                            <Label text="sujeto-lote"/>
							<CheckBox/>
                            <core:Title/>
                            <Label text="Unidad med. Salida"/>
							<Input value="{/ausme}"/>
                            <Label text="Cond. almacenaje"/>
							<Input value="{/raube}"/>
                            <core:Title text="Datos de conservación" />
                            <Label text="Tmp-almacenaje max."/>
							<Input value="{/maxlz}"/>
                            <Label text="Tmp-min. durac. reset."/>
							<Input value="{/mhdrz}"/>
                            <Label text="Ind. per. fe. caducidad"/>
							<Input value="{/iprkz}"/>
                            <Label text="%tempo. caduc. almacen"/>
							<Input value="{/mhdlp}"/>
                            <core:Title/>
                            <Label text="Unidad de tiempo"/>
							<Input value="{/lzeih}"/>
                            <Label text="Dur. total conserv."/>
							<Input value="{/mhdhb}"/>
                            <Label text="Regla redondeo FPC"/>
							<Input value="{/rdmhd}"/>
						</f:SimpleForm>
                    </IconTabFilter>
				</items>
			</IconTabBar>
        </content>  
    </Page>
</mvc:View>