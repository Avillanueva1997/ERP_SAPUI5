                            labelSpanM="4"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="3"
                            emptySpanL="3"
                            emptySpanM="3"
                            emptySpanS="3"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="2"
                            singleContainerFullSize="false">
                            <core:Title text="Datos generales" />
