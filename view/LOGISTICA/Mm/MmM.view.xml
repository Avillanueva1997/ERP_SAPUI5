                            emptySpanL="8"
                            emptySpanM="7"
                            emptySpanS="0"
                            columnsXL="1"
                            columnsL="1"
                            columnsM="1"
                            singleContainerFullSize="false">
							<Label text="Centro" id="lblCentroA"/>
