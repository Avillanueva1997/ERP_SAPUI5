<mvc:View
	controllerName="sap.ui.su01.controller.LOGISTICA.ME.ME11"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:u="sap.ui.unified"
	xmlns="sap.m">    
    <core:Fragment fragmentName='sap.ui.su01.view.Cabecera' type='XML' />
    <Page
		showHeader="true"
		enableScrolling="false" >
        <customHeader>            
			<Toolbar>                
				<ToolbarSpacer/>
				<Title text="Crear reg.info de compras: Acceso" level="H2"/>			
                <ToolbarSpacer/>
			</Toolbar>
		</customHeader> 
        <subHeader>
			<Toolbar>
				<Button icon="sap-icon://document" press="onNew"/>
				<!--<Button icon="sap-icon://copy" press="onCopy"/>-->
			</Toolbar>
		</subHeader>
        <content>
            <f:SimpleForm
                layout="ResponsiveGridLayout">
                <f:content>     
                    <Label text="Proveedor" />
                    <Input maxLength="10" width	="12em" id="iptProveedor"  showValueHelp="true"/>
                    <Label text="Material" />
                    <Input maxLength="10" width	="12em" id="iptMaterial"  showValueHelp="true"/>
                    <Label text="Org.compras" />
                    <Input maxLength="04" width	="06em" id="iptOrgcomp"  showValueHelp="true"/>  
                    <Label text="Centro" />
                    <Input maxLength="04" width	="06em" id="iptCentro"  showValueHelp="true"/>
                </f:content>
            </f:SimpleForm>
            <f:SimpleForm
                layout="ResponsiveGridLayout">
                <f:title>
                    <core:Title text="Infotipo" />
                </f:title>
                <f:content>
                    <FlexBox
                         direction="Column"
                         alignItems="Start"
                         justifyContent="Center" >					
                        <items>   
                            <RadioButton id="chkNormal" groupName="GroupA" text="Normal" selected="true" />
                            <RadioButton id="chksubcont" groupName="GroupA" text="Subcontratación" />
                            <RadioButton id="chkPipe" groupName="GroupA" text="Pipeline" />
                            <RadioButton id="chkCons" groupName="GroupA" text="Consignación" />
                        </items>
                    </FlexBox>                           
                </f:content>
            </f:SimpleForm>
        </content>
	</Page>
</mvc:View>